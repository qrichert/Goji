<translation target="en">
	<!--
		~~~ <ENGLISH> ~~~
		This is the English language file.
	-->
	<page>
		<!-- Global -->
		<segment id="HELLO_WORLD">hello, world</segment>
		<segment id="GO_BACK_HOME">← Go back home</segment>
		<segment id="SEND">Send</segment>
		<segment id="PUBLISH">Publish</segment>
		<segment id="EDIT">Edit</segment>
		<segment id="DELETE">Delete</segment>

		<!-- Nav -->
		<segment id="NAV_HOME">Home</segment>
		<segment id="NAV_BLOG">Blog</segment>
		<segment id="NAV_CONTACT">Contact</segment>

		<!-- Footer -->
		<segment id="FOOTER_GOJI_ON_GITHUB">Goji on GitHub</segment>
		<segment id="FOOTER_LOG_IN">Log In</segment>
		<segment id="FOOTER_LOG_OUT">Log Out</segment>
	</page>
	<!--
		You can use the wildcard symbol * to match any character(s).
		Here it will match anything that begins with http-error-
	-->
	<page id="http-error-*">
		<segment id="ERROR_PAGE_TITLE">Error %{ERROR_CODE}</segment> <!-- + Error code -->
		<segment id="ERROR_PAGE_DESCRIPTION">We encountered a problem while loading the page.</segment>
		<segment id="ERROR_DESCRIPTION">
			<option id="403">Access denied</option>
			<option id="404">Page could not be found</option>
			<option id="418">I'm a teapot</option>
			<option id="500">Internal error</option>
		</segment>
	</page>
	<!--
		Page ID must match page ID in routes.json5 if you use \Goji\Translation\Translator.
		Only segments where page ID matches current ID (and global pages, without ID) will be loaded.
	-->
	<page id="home">
		<segment id="HOME_PAGE_TITLE">Home</segment>
		<segment id="HOME_PAGE_DESCRIPTION"></segment>
		<segment id="HOME_PRE_HEADING">Welcome, and</segment>
		<segment id="HOME_FOOBAR">Foobar?</segment>
		<segment id="HOME_PLURALIZATION">
			<!--
				For pluralization, put each form in it's own alternative and specify the count attribute.
				Count attribute is a regex, so:
				- ^ means start of sequence and $ means end of sequence.
				- 0|1 means either 0 or 1
				- You can have more elaborate cases, like for Russian:
					Numbers that end in 1, except 11:
					^[^\D1]*1$|^1{3,}$
					^[^\D1]*1$|\d*[^\D1]\d*1$|^1{3,}$
				- Don't forget parenthesis for ORs. ^0|1$ matches anything that starts with 0 OR ends with 1 !!!
				  whereas ^(0|1)$ matches 0 OR 1
				- This one would match 0 OR 1:
					<alternative count="^(0|1)$">Il y a %{COUNT} foobar.</alternative>
			-->
			<alternative count="^0$">Sorry, no foobars :(</alternative>
			<alternative count="^1$">There's only one foobar, %{COUNT}...</alternative>
			<alternative count="rest">There are %{COUNT} foobars.</alternative>
		</segment>
		<segment id="HOME_TRY_A_DIFFERENT_LANGUAGE">Try a different language:</segment>
	</page>
	<page id="contact">
		<segment id="CONTACT_PAGE_TITLE">Contact</segment>
		<segment id="CONTACT_PAGE_DESCRIPTION"></segment>
		<segment id="CONTACT_MAIN_TITLE">Contact</segment>
		<segment id="CONTACT_FORM_NAME">Name</segment>
		<segment id="CONTACT_FORM_NAME_PLACEHOLDER">John Doe</segment>
		<segment id="CONTACT_FORM_EMAIL">Email</segment>
		<segment id="CONTACT_FORM_EMAIL_PLACEHOLDER">your@email.com</segment>
		<segment id="CONTACT_FORM_MESSAGE">Message</segment>
		<segment id="CONTACT_FORM_MESSAGE_PLACEHOLDER">Your message</segment>
		<segment id="CONTACT_SUCCESS">Your message has been sent. Thanks!</segment>
		<segment id="CONTACT_ERROR">The form contains errors</segment>
	</page>
	<page id="login">
		<segment id="LOGIN_PAGE_TITLE">Log In</segment>
		<segment id="LOGIN_PAGE_DESCRIPTION"></segment>
		<segment id="LOGIN_FORM_EMAIL">Email</segment>
		<segment id="LOGIN_FORM_EMAIL_PLACEHOLDER">your@email.com</segment>
		<segment id="LOGIN_FORGOT_PASSWORD">Forgot password?</segment>
		<segment id="LOGIN_FORM_PASSWORD">Password</segment>
		<segment id="LOGIN_FORM_LOG_IN_BUTTON">Log In</segment>
		<segment id="LOGIN_NO_ACCOUNT">Don’t have an account?</segment>
		<segment id="LOGIN_SIGN_UP">Sign up</segment>
		<segment id="LOGIN_FUN_MESSAGE">
			<alternative count="^1$">Hi, how are you?</alternative>
			<alternative count="^2$">Do you like goji berries?</alternative>
			<alternative count="rest">:)</alternative>
		</segment>
		<segment id="LOGIN_WRONG_USERNAME_OR_PASSWORD">Wrong username or password!</segment>
	</page>
	<page id="blog">
		<segment id="BLOG_PAGE_TITLE">Blog</segment>
		<segment id="BLOG_PAGE_DESCRIPTION"></segment>
		<segment id="BLOG_MAIN_TITLE">Blog</segment>
		<segment id="BLOG_NEW_BLOG_POST">New blog post</segment>
		<segment id="BLOG_POST_DATE">%{MONTH}/%{DAY}/%{YEAR}</segment>
		<segment id="BLOG_NO_BLOG_POSTS">There are no blog posts yet, come back later...</segment>
		<segment id="BLOG_READ_MORE">Read more...</segment>
	</page>
	<page id="blog-post">
		<segment id="BLOG_POST_PAGE_DESCRIPTION"></segment>
		<segment id="BLOG_POST_DATE">%{DAY}/%{MONTH}/%{YEAR} at %{HOUR}:%{MIN}</segment>
		<segment id="BLOG_POST_DELETE_CONFIRMATION">Delete the blog post, are you sure?\nThis action can't be undone.</segment>
		<segment id="BLOG_POST_DELETE_CONFIRMATION_INPUT">Enter "yes" to confirm</segment>
		<segment id="BLOG_POST_DELETE_CONFIRMATION_STRING">yes</segment>
		<segment id="BLOG_POST_BACK_TO_BLOG_POSTS">← Back to blog posts</segment>
	</page>
	<page id="admin-blog-post">
		<segment id="BLOG_POST_PAGE_TITLE">Blog Post</segment>
		<segment id="BLOG_POST_PAGE_DESCRIPTION"></segment>
		<segment id="BLOG_POST_MAIN_TITLE">
			<alternative count="^create$">New Blog Post</alternative>
			<alternative count="^update$">Edit Blog Post</alternative>
		</segment>
		<segment id="BLOG_POST_NEW_BLOG_POST">New blog post</segment>
		<segment id="BLOG_POST_GO_TO_BLOG_POST">Go to blog post</segment>
		<segment id="BLOG_POST_SUCCESS">Your blog post has been published</segment>
		<segment id="BLOG_POST_UPDATE_SUCCESS">Your blog post has been updated</segment>
		<segment id="BLOG_POST_ERROR">The form contains errors</segment>
		<segment id="BLOG_POST_WRITING_FAILED">Internal Error: The article could not be saved</segment>
		<segment id="BLOG_POST_PERMALINK">Permalink</segment>
		<segment id="BLOG_POST_PERMALINK_PLACEHOLDER">my-story</segment>
		<segment id="BLOG_POST_TITLE">Title</segment>
		<segment id="BLOG_POST_TITLE_PLACEHOLDER">My Story</segment>
		<segment id="BLOG_POST_POST">Content</segment>
		<segment id="BLOG_POST_POST_PLACEHOLDER">Once upon a time...</segment>
	</page>
</translation>
