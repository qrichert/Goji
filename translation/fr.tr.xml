<?xml version="1.0" encoding="UTF-8" ?>
<translation target="fr">
	<!--
		~~~ <FRENCH> ~~~
		This is the French language file.
	-->
	<page>
		<!-- Global -->
		<segment id="HELLO_WORLD">bonjour, monde</segment>
		<segment id="GO_BACK_HOME">← Retourner vers la page d'accueil</segment>

		<!-- Nav -->
		<segment id="NAV_HOME">Accueil</segment>
		<segment id="NAV_ABOUT">À propos</segment>
		<segment id="NAV_CONTACT">Contact</segment>
		<segment id="NAV_LOG_IN">Login</segment>

		<!-- Footer -->
		<segment id="FOOTER_GOJI_ON_GITHUB">Goji sur GitHub</segment>
	</page>
	<!--
		You can use the wildcard symbol * to match any character(s).
		Here it will match anything that begins with http-error-
	-->
	<page id="http-error-*">
		<segment id="ERROR_PAGE_TITLE">Erreur %{ERROR_CODE}</segment> <!-- + Error code -->
		<segment id="ERROR_PAGE_DESCRIPTION">Nous avons rencontré une erreur lors du chargement de la page.</segment>
		<segment id="ERROR_DESCRIPTION">
			<option id="403">Accès interdit</option>
			<option id="404">Page introuvable</option>
			<option id="500">Erreur interne</option>
		</segment>
	</page>
	<!--
		Page ID must match page ID in routes.json5 if you use \Goji\Translation\Translator.
		Only segments where page ID matches current ID (and global pages, without ID) will be loaded.
	-->
	<page id="home">
		<segment id="HOME_PAGE_TITLE">Accueil</segment>
		<segment id="HOME_PAGE_DESCRIPTION"></segment>
		<segment id="HOME_FOOBAR">Foobar ?</segment>
		<segment id="HOME_PLURALIZATION">
			<!--
				For pluralization, put each form in it's own alternative and specify the count attribute.
				Count attribute is a regex, so:
				- ^ means start of sequence and $ means end of sequence.
				- 0|1 means either 0 or 1
				- You can have more elaborate cases, like for Russian:
					Numbers that ends in 1 except 11:
					^[^\D1]*1$|^1{3,}$
					^[^\D1]*1$|\d*[^\D1]\d*1$|^1{3,}$
				- Don't forget parenthesis for ORs. ^0|1$ matches anything that starts with 0 OR ends with 1 !!!
				  whereas ^(0|1)$ matches 0 OR 1
				- This one would match 0 OR 1:
					<alternative count="^(0|1)$">Il y a %{COUNT} foobar.</alternative>
			-->
			<alternative count="^0$">Désolé, pas de foobar :(</alternative>
			<alternative count="^1$">Il n'y a qu'un seul foobar, %{COUNT}...</alternative>
			<alternative count="rest">Il y a %{COUNT} foobars.</alternative>
		</segment>
		<segment id="HOME_TRY_A_DIFFERENT_LANGUAGE">Essayez une autre langue :</segment>
	</page>
	<page id="login">
		<segment id="LOGIN_PAGE_TITLE">Login</segment>
		<segment id="LOGIN_PAGE_DESCRIPTION"></segment>
		<segment id="LOGIN_FORM_EMAIL">Email</segment>
		<segment id="LOGIN_FORM_EMAIL_PLACEHOLDER">votre@email.com</segment>
		<segment id="LOGIN_FORGOT_PASSWORD">Mot de passe oublié ?</segment>
		<segment id="LOGIN_FORM_PASSWORD">Mot de passe</segment>
		<segment id="LOGIN_FORM_LOG_IN_BUTTON">Connexion</segment>
		<segment id="LOGIN_NO_ACCOUNT">Pas encore de compte ?</segment>
		<segment id="LOGIN_SIGN_UP">Inscrivez-vous</segment>
		<segment id="LOGIN_FUN_MESSAGE">
			<alternative count="^1$">Bonjour, comment ça va?</alternative>
			<alternative count="^2$">Vous aimez les baies de goji?</alternative>
			<alternative count="rest">:)</alternative>
		</segment>
	</page>
</translation>
